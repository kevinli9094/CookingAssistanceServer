extends layout

block content
    .container
        form#startCrawlingForm(novalidate)
            .form-row.align-items-center
                .col-auto
                    input#inputBeginIndex.form-control(type='number' placeholder='Begin index' required)
                    .invalid-feedback This field must be a number
                .col-auto
                    input#inputEndIndex.form-control(type='number' placeholder='End index' required)
                    .invalid-feedback This field must be a number
                .col-auto
                    button.btn.btn-primary(type='submit') Start crawling

        form#startUpdatingForm.mt-4(novalidate)
            .form-row.align-items-center
                .col-auto
                    input#inputErrorsToStop.form-control(type='number' placeholder='# of errors to stop' required)
                    .invalid-feedback This field must be a number
                .col-auto
                    button.btn.btn-primary(type='submit') Start updating

        button#resetRecipesBtn.btn.btn-danger.btn-block.mt-5 reset recipes
        button#resetIndexBtn.btn.btn-danger.btn-block.mt-3 reset all index

        

