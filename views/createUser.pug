extends layout

block content
  .container
    form#createUserForm(novalidate)
        .col-md-6.offset-md-3
            label.control-label(for='userNameInput') Username
            input#userNameInput.form-control(type='text' pattern='([0-9a-zA-Z]){3,}' required)
            .invalid-feedback This field only accept characters from 0-9, a-z, A-Z, and must have at least 3 characters.
            button.btn.btn-primary.mt-4.btn-block(type='submit') Submit
        

